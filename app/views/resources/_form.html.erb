<%= form_for(@resource) do |f| %>
  <% if @resource.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@resource.errors.count, "error") %> prohibited this resource from being saved:</h2>

      <ul>
      <% @resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="actions right">
    <%= f.submit %>
  </div>

  <div class="clearfix"></div>

  <aside class="resources-sidebar">
    <% [:name, :resource_type, :uri, :data_format, :update_freq,
        :mirror_proxy, :location, :manufacturer, :model, :make,
        :serial_num, :data_overview, :last_updated, :creation_date,
        :notes].each do | attr | %>

      <div class="input-group">
        <span class="input-group-addon"><%= f.label attr %></span>

        <% if attr == :update_freq %>
          <%= f.text_field attr, class: "form-control hotfix-update-freq" %>
          <div class="input-group-btn">
            <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">Frequency? <span class="caret"></span></button>
            <ul class="dropdown-menu pull-right">
              <li><a href="#">Select the frequency</a></li>
              <li class="divider"></li>
              <li><a href="#">Seconds</a></li>
              <li><a href="#">Minutes</a></li>
              <li><a href="#">Hours</a></li>
              <li><a href="#">Days</a></li>
            </ul>
          </div>

        <% elsif attr == :mirror_proxy %>
          <%= select_tag :mirror_proxy, options_for_select([
            ["False", "false"],
            ["True", "true"]
          ]), class: "form-control" %>

        <% elsif attr == :last_updated or attr == :creation_date %>
          <%= f.text_field attr, class: "form-control", :disabled => 'disabled' %>

        <% else %>
          <%= f.text_field attr, class: "form-control" %>

        <% end %>
      </div>

    <% end %>
  </aside>
<% end %>
