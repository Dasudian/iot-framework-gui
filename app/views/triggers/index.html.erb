<%= link_to "Add a trigger", triggers_new_path %>
<br />
<br />
<% @triggers.each do |t| %>
	<%= @functions[t['function']] %>
	<%= t['input'] %>
	<% t['streams'].each do |s| %>
		<%= @stream_names[s] %>
	<% end %>
	<%= link_to "Delete", {controller: "triggers", action: "destroy", query: t.to_json}, method: :delete, remote: true,  class: "glyphicon glyphicon-remove btn btn-danger" %>
	<br />
<% end %>