<h1>New Trigger</h1>
<div class="col-md-6 col-md-offset-3 login-form">
<%= form_for(@trigger, :url => {:action => "create"}) do |f| %>
	
	<%= f.label :function, class: "left"%>
	<label class="explanation">The function for the trigger</label><br>
	<%= f.select :function, {"greater than" => "greater_than", "less than" => "less_than"}, {}, { :class => 'form-control input clearfix' } %>
	<br>

	<%= f.label :input, class: "left" %>
	<label class="explanation">The limit Value</label><br>
	<%= f.text_field :input , class: "form-control input clearfix", placeholder: "e.g: 3.14"%>
	<br>

	<%= f.label  :streams, class: "left" %>
	<label class="explanation">Pick the stream to use</label><br>
	<%= f.select :streams, @stream_ids, {}, { :class => 'form-control input clearfix' } %>
	<br>

	<%= f.submit "Submit", {:class => "btn btn-primary btn-create right"} %>
<% end %>
</div>