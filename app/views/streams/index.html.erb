<h1>Listing streams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Private</th>
      <th>Deviation</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Type</th>
      <th>Unit</th>
      <th>Bound max</th>
      <th>Bound min</th>
      <th>State</th>
      <th>Ranking</th>
      <th>Notes</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @streams.each do |stream| %>
      <tr>
        <td><%= stream.name %></td>
        <td><%= stream.description %></td>
        <td><%= stream.private %></td>
        <td><%= stream.deviation %></td>
        <td><%= stream.longitude %></td>
        <td><%= stream.latitude %></td>
        <td><%= stream.type %></td>
        <td><%= stream.unit %></td>
        <td><%= stream.bound_max %></td>
        <td><%= stream.bound_min %></td>
        <td><%= stream.state %></td>
        <td><%= stream.ranking %></td>
        <td><%= stream.notes %></td>
        <td><%= link_to 'Show', resource_stream_path(@resource, stream) %></td>
        <td><%= link_to 'Edit', edit_resource_stream_path(@resource, stream) %></td>
        <td><%= link_to 'Destroy', [@resource, stream], confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stream', new_resource_stream_path(@resource) %>
